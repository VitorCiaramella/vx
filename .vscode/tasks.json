{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [        
        {
            "type": "shell",
            "label": "BuildWithClang",
            "command": "/Library/Developer/CommandLineTools/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-isystem/Library/Developer/CommandLineTools/usr/include",
                "-stdlib=libc++",
                
                "-DVK_USE_PLATFORM_MACOS_MVK",
                "-DVK_USE_PLATFORM_METAL_EXT",
                "-D_DEBUG",

                "-v",//verbose
                "-g",//debug

                "-framework",
                "Cocoa",
                "-framework",
                "OpenGL",
                "-framework",
                "IOKit",
                "-framework",
                "CoreVideo",

                "-I${workspaceFolder}/include",

                "-I${workspaceFolder}/extern/glfw/include",
                "-L${workspaceFolder}/build/bin/glfw/src",
                "-lglfw3",


                //"-F${workspaceFolder}/extern/vulkansdk-macos-1.1.106.0/macOS/Frameworks",
                //"-framework",
                //"vulkan",
                
                "-I${workspaceFolder}/extern/vulkansdk-macos-1.1.106.0/macOS/include",
                "${workspaceFolder}/build/bin/vxGraphics/libvulkan.1.dylib",

                //"-I${workspaceFolder}/extern/vulkansdk-macos-1.1.106.0/MoltenVK/include",
                //"${workspaceFolder}/build/bin/vxGraphics/libMoltenVK.dylib",

                //"-L${workspaceFolder}/extern/vulkansdk-macos-1.1.106.0/macOS/lib",
                //"-llibvulkan",

                //"${file}",


                "${workspaceFolder}/src/vxGraphics/functions.cpp",
                "${workspaceFolder}/src/vxGraphics/main.cpp",
                "${workspaceFolder}/src/vxGraphics/instance.cpp",
                "${workspaceFolder}/src/vxGraphics/window.cpp",
                "${workspaceFolder}/src/vxGraphics/platform_macos.cpp",
                "${workspaceFolder}/src/vxGraphics/platform_win32.cpp",
                "-o",
                //"${fileDirname}/${fileBasenameNoExtension}",
                "${workspaceFolder}/build/bin/vxGraphics/vxGraphics",
            ],
            "options": {
              "cwd": "/Library/Developer/CommandLineTools/usr/bin"
            },
        },
        {
            "label": "FixVulkanLibPath",
            "type": "shell",
            "command": "install_name_tool",
            "args": [
                "-change",
                "'@rpath/libvulkan.1.dylib'",
                "'@executable_path/libvulkan.1.dylib'",
                "${workspaceFolder}/build/bin/vxGraphics/vxGraphics",
            ],
            "dependsOn": ["BuildWithClang"],
        },
        {
            "label": "cs1",
            "type": "shell",
            "command": "${workspaceFolder}/extern/vulkansdk-macos-1.1.106.0/macOS/bin/glslc",
            "args": [
                "-fshader-stage=vert",                
                "-o",
                "${workspaceFolder}/build/bin/vxGraphics/triangle.vert.spv",
                "${workspaceFolder}/src/vxGraphics/shaders/triangle.vert.glsl",
            ],
        },
        {
            "label": "cs2",
            "type": "shell",
            "command": "${workspaceFolder}/extern/vulkansdk-macos-1.1.106.0/macOS/bin/glslc",
            "args": [
                "-fshader-stage=frag",                
                "-o",
                "${workspaceFolder}/build/bin/vxGraphics/triangle.frag.spv",
                "${workspaceFolder}/src/vxGraphics/shaders/triangle.frag.glsl",
            ],
        },
        {
            "label": "BuildShaders",
            "dependsOn": ["cs1", "cs2"],
        },
        {
            "label": "Build",
            "dependsOn": ["BuildShaders", "FixVulkanLibPath"],
            "group": {
                "kind": "build",
                "isDefault": true
            },            
        },
        {
            "label": "postdebugKill",
            "type": "process",
            "command":[
               "${command:workbench.action.tasks.terminate}",
               "${command:workbench.action.acceptSelectedQuickOpenItem}",
            ],
         },
    ]
}