{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [        
        {
            "type": "shell",
            "label": "BuildWithClang",
            "command": "/Library/Developer/CommandLineTools/usr/bin/clang++",
            "args": [
                "-std=c++17",
                //"-isystem/Library/Developer/CommandLineTools/usr/include",
                "-stdlib=libc++",
                
                "-DVK_USE_PLATFORM_MACOS_MVK",
                "-DVK_USE_PLATFORM_METAL_EXT",
                "-D_DEBUG",

                "-v",//verbose
                "-g",//debug

                "-framework",
                "Cocoa",
                "-framework",
                "OpenGL",
                "-framework",
                "IOKit",
                "-framework",
                "CoreVideo",

                "-I${workspaceFolder}/include",

                "-I${workspaceFolder}/extern/boost/boost",

                "-I${workspaceFolder}/extern/glfw/include",

                "-L${workspaceFolder}/build/bin/glfw/src",
                "-lglfw3",

                "-I${workspaceFolder}/extern/vulkansdk/macos/macOS/include",
                "$VULKAN_SDK/lib/libvulkan.1.dylib",

                "${workspaceFolder}/src/vxCommon/debug.cpp",

                "${workspaceFolder}/src/vxGraphics/pipeline.cpp",
                "${workspaceFolder}/src/vxGraphics/main.cpp",
                "${workspaceFolder}/src/vxGraphics/instance.cpp",
                "${workspaceFolder}/src/vxGraphics/window.cpp",
                "${workspaceFolder}/src/vxGraphics/debug.cpp",
                "${workspaceFolder}/src/vxGraphics/synchronization.cpp",
                "${workspaceFolder}/src/vxGraphics/device.cpp",
                "${workspaceFolder}/src/vxGraphics/macos/window.cpp",
                "${workspaceFolder}/src/vxGraphics/win32/window.cpp",
                
                "-o",
                "${workspaceFolder}/build/bin/vxGraphics/vxGraphics",
            ],
            "options": {
              "cwd": "/Library/Developer/CommandLineTools/usr/bin"
            },
        },
        {
            "type": "shell",
            "label": "BuildWithClang2",
            "command": "/Library/Developer/CommandLineTools/usr/bin/clang++",
            "args": [
                "-std=c++17",
                //"-isystem/Library/Developer/CommandLineTools/usr/include",
                "-stdlib=libc++",
                
                "-D_DEBUG",

                "-v",//verbose
                "-g",//debug
                //"-L${workspaceFolder}/build/bin/boost/lib",
                //"-lboost_system",
                //"-lboost_filesystem",
                //"-lboost_process",
                //"-lboost_thread-mt",
                "${workspaceFolder}/build/bin/boost/lib/libboost_filesystem-mt-d-x64.a",
                "${workspaceFolder}/build/bin/boost/lib/libboost_chrono-mt-d-x64.a",
                "${workspaceFolder}/build/bin/boost/lib/libboost_system-mt-d-x64.a",
                "${workspaceFolder}/build/bin/boost/lib/libboost_thread-mt-d-x64.a",

                "-I${workspaceFolder}/build/bin/boost/include",

                "${workspaceFolder}/src/vxBuild/main.cpp",

                "-o",
                "${workspaceFolder}/build/bin/vxBuild/vxBuild",
            ],
            "options": {
              "cwd": "/Library/Developer/CommandLineTools/usr/bin"
            },
        },
        {
            "label": "FixVulkanLibPath",
            "type": "shell",
            "command": "install_name_tool",
            "args": [
                "-change",
                "'@rpath/libvulkan.1.dylib'",
                "'@executable_path/vulkan/lib/libvulkan.1.dylib'",
                "${workspaceFolder}/build/bin/vxGraphics/vxGraphics",
            ],
            "dependsOn": ["BuildWithClang"],
        },
        {
            "label": "cs1",
            "type": "shell",
            "command": "${workspaceFolder}/extern/vulkansdk/macos/macOS/bin/glslc",
            "args": [
                "-fshader-stage=vert",                
                "-o",
                "${workspaceFolder}/build/bin/vxGraphics/shaders/triangle.vert.spv",
                "${workspaceFolder}/src/vxGraphics/shaders/triangle.vert.glsl",
            ],
        },
        {
            "label": "cs2",
            "type": "shell",
            "command": "${workspaceFolder}/extern/vulkansdk/macos/macOS/bin/glslc",
            "args": [
                "-fshader-stage=frag",                
                "-o",
                "${workspaceFolder}/build/bin/vxGraphics/shaders/triangle.frag.spv",
                "${workspaceFolder}/src/vxGraphics/shaders/triangle.frag.glsl",
            ],
        },
        {
            "label": "BuildShaders",
            "dependsOn": ["cs1", "cs2"],
        },
        {
            "label": "Build",
            //"dependsOn": ["BuildShaders", "FixVulkanLibPath"],
            //"dependsOn": ["BuildShaders", "BuildWithClang"],
            "dependsOn": ["BuildWithClang2"],
            "group": {
                "kind": "build",
                "isDefault": true
            },            
        },
        {
            "label": "postdebugKill",
            "type": "process",
            "command":[
               "${command:workbench.action.tasks.terminate}",
               "${command:workbench.action.acceptSelectedQuickOpenItem}",
            ],
         },
    ]
}