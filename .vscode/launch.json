    "version": "0.2.0",
    "configurations": [        
        {
            "name": "vxBuild",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/vxBuild/vxBuild",
            "args": ["DEBUG"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/bin/vxBuild",
            "environment": [
            ],
            "preLaunchTask": "Build vxBuild",
            "externalConsole": true,
            "MIMode": "lldb",
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true
            }
        },
        {
            "name": "vxApplication-macOS",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/vxApplication/macos/Debug/vxApplication-macOS.app/Contents/MacOS/vxApplication-macOS",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/bin/vxApplication/macos/Debug/vxApplication-macOS.app/Contents/MacOS/",
            "environment": [
            ],
            "externalConsole": true,
            "MIMode": "lldb",
            "preLaunchTask": "Build vxApplication-macos",
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true
            }
        }       
    ]
}